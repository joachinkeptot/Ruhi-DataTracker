{
  "name": "roommap-ops",
  "version": "2.0.0",
  "description": "RoomMap Ops - Community tracking and management system",
  "type": "module",
  "main": "electron-main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "force-graph": "^1.51.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.1.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@types/papaparse": "^5.5.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.roommap-ops.app",
    "productName": "RoomMap Ops",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
